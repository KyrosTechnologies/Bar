<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/front_bar"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ViewSwitcher
                android:layout_width="match_parent"
                android:id="@+id/view_switcher_change"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/first_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front Bar"
                    android:textColor="@color/edit"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:hint="Enter Bar Name"
                    android:textColorHint="@color/edit"
                    android:id="@+id/edit_barname"/>
            </ViewSwitcher>


            <TextView
                android:id="@+id/updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Updated 3 days ago"
                android:textColor="@color/edit_light"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:id="@+id/right_arrow_adapter_bar"
            android:layout_height="18dp"
            android:src="@drawable/rightarrow"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/edittext"
        android:layout_marginTop="5dp"/>

</LinearLayout>