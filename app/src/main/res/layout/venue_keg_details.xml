<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/venue_keg_des_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_full_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Full Weight(KG)"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_empty_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Empty Weight(KG)"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/venue_keg_des_main_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Main Category"
                            android:inputType="textPersonName"
                            android:paddingLeft="10dp"
                            android:textColor="@color/edit"
                            android:textColorHint="@color/edit"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rightarrow" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Sub Category"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_shots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Shots"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_par_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Par Level"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_distributor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Distributor Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_price_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Price Unit"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_bin_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Bin Number"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

                <EditText
                    android:id="@+id/venue_keg_des_product_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Product Code"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:textColor="@color/edit"
                    android:textColorHint="@color/edit"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/edittext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/venue_keg_bott_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
