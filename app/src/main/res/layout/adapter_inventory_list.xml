<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/description_act"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bottle_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/liquier"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/liquor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/edit"
                android:textSize="14sp"/>

                <TextView
                    android:id="@+id/liquor_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450ml"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:textColor="@color/edit_light"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/alchohol_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/edit_light"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="Type"/>

        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/rightarrow"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>