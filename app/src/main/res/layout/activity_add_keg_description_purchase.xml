<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:id="@+id/keg_name_purchase"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Weight (KG)"
                        android:id="@+id/keg_weight_purchase"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Empty Weight (KG)"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:id="@+id/keg_emptyweight_purchase"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category"
                        android:id="@+id/keg_category_purchase"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sub Category"
                        android:id="@+id/keg_subcategory_purchase"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Smaller Servicing"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:id="@+id/keg_shots_purchase"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Par Level"
                        android:id="@+id/keg_parlevel_purchase"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Distributor Name"
                        android:id="@+id/keg_distributorname_purchase"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/keg_price_purchase"
                        android:hint="Whole Sale Price"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bin Number"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:id="@+id/keg_binnumber_purchase"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Product Code"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/white"
                        android:id="@+id/keg_productcode_purchase"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/kegg_image_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>