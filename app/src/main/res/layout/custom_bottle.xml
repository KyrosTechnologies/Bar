<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="@color/edit"
                    android:id="@+id/name_custombottle"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/edit"
                    android:textSize="16sp"
                    android:inputType="textPersonName"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/edittext"
                    android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Capacity (ML)"
                        android:id="@+id/capacity_custombottle"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:hint="Main Category"
                            android:textColorHint="@color/edit"
                            android:background="@android:color/transparent"
                            android:id="@+id/category_custombottle"
                            android:textColor="@color/edit"
                            android:textSize="16sp"
                            android:inputType="textPersonName"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/rightarrow"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/edittext"
                    android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sub Category"
                        android:textColorHint="@color/edit"
                        android:id="@+id/subcategory_custombottle"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shots"
                        android:id="@+id/shots_custombottle"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Par Level"
                        android:id="@+id/parlevel_custombottle"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Distributor Name"
                        android:id="@+id/distributor_custombottle"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Price Unit"
                        android:id="@+id/price_custombottle"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bin Number"
                        android:id="@+id/binnumber_custombottle"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Product Code"
                        android:textColorHint="@color/edit"
                        android:paddingLeft="10dp"
                        android:id="@+id/producr_custombottle"
                        android:background="@android:color/transparent"
                        android:textColor="@color/edit"
                        android:textSize="16sp"
                        android:inputType="textPersonName"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/edittext"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/image_custombottle"
                   />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>